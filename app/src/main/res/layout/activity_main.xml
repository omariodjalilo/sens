<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.omario.sensors.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView0"
        android:text="acceleration data:"
        android:textColor="#c81a1a" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/txt_ax"
        android:layout_below="@+id/textView0"
        android:layout_centerHorizontal="true"
        android:textColor="#ba2828" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/txt_ay"
        android:layout_below="@+id/txt_ax"
        android:layout_centerHorizontal="true"
        android:textColor="#b82727" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/txt_az"
        android:layout_below="@+id/txt_ay"
        android:layout_centerHorizontal="true"
        android:textColor="#a50b0b" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView5"
        android:text="magnetic data:"
        android:textColor="#0d37c1"
        android:layout_below="@+id/txt_az"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/txt_mx"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:textColor="#0e177b" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/txt_my"
        android:layout_below="@+id/txt_mx"
        android:layout_centerHorizontal="true"
        android:textColor="#0e128f" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/txt_mz"
        android:layout_below="@+id/txt_my"
        android:layout_centerHorizontal="true"
        android:textColor="#222a9b" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:text="gyro"
        android:textColor="#0d37c1"
        android:layout_below="@+id/txt_mz"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/txt_gx"
        android:textColor="#0e177b"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginEnd="253dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/txt_gy"
        android:textColor="#0e128f"
        android:layout_below="@+id/txt_gx"
        android:layout_alignRight="@+id/textView"
        android:layout_marginRight="187dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/txt_gz"
        android:textColor="#222a9b"
        android:layout_below="@+id/txt_gy"
        android:layout_alignRight="@+id/textView"
        android:layout_marginRight="187dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:text="timestamp"
        android:textColor="#0d37c1"
        android:layout_below="@+id/txt_gz"
        android:layout_alignEnd="@+id/txt_gz" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:id="@+id/txt_timestamp"
        android:textColor="#222a9b"
        android:layout_marginRight="187dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
